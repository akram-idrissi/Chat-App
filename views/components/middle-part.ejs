<section id="middle-section" class="flex flex-col flex-auto bg-third">
    <!-- top bar  -->
    <div id="topbar-user" data-ref="" class="chat-header p-4 shadow-md" style="min-height: 70px;">
        <button id="arrow-left" class="mr-2 focus:outline-none lg:hidden md:hidden">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512" class="w-6 h-6">
                <path
                    d="M447.1 256C447.1 273.7 433.7 288 416 288H109.3l105.4 105.4c12.5 12.5 12.5 32.75 0 45.25C208.4 444.9 200.2 448 192 448s-16.38-3.125-22.62-9.375l-160-160c-12.5-12.5-12.5-32.75 0-45.25l160-160c12.5-12.5 32.75-12.5 45.25 0s12.5 32.75 0 45.25L109.3 224H416C433.7 224 447.1 238.3 447.1 256z" />
            </svg>
        </button>
    </div>

    <!-- message container -->
    <div id="msg-container" class="chat-body p-4 flex-1 overflow-y-scroll">

    </div>

    <!-- input field -->
    <div class="chat-footer flex-none">
        <div class="flex items-center p-4">
            <form id="form" class="relative flex items-center flex-grow">

                <button id="attachements" @click="open = true"
                    class="flex items-center focus:outline-none mr-2 block text-main w-6 h-6 rounded-md transition duration-200">
                    <svg xmlns="http://www.w3.org/2000/svg" class="text-main w-6 h-6" fill="none" viewBox="0 0 24 24"
                        stroke="currentColor" stroke-width="2">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
                    </svg>
                </button>
                <input id="input"
                    class="rounded-md p-2 w-full bg-fith placeholder:text-fourth text-sm focus:outline-none" type="text"
                    value="" placeholder="" />
            </form>
        </div>
    </div>
</section>